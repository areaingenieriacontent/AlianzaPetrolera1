                    <tr><th><b>Costo Total</b></th><td>@Html.DisplayFor(model => model.Matri_CosTota)</td></tr>
                </table>
            </div>
            <div class="col-sm-12 centrar-contenido" style="left:4%; margin-top: 20px;">
