@model IEnumerable<AlianzaPetrolera.Models.Admin.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Matricula</h1>
<button type="button" class="btn btn-warning"> @Html.ActionLink("Crear Categaoria", "ImprimirTodas")</button>
<br />
<br />
<br />
<table class="table table-hover table-dark">
    <tr class="bg-warning text-white text-center">
        <th style="border: none;">
            @Html.DisplayNameFor(model => model.Cate_Name)     
        </th>
        <th></th>
    </tr>

                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cate_Name)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Cate_Id }) |*@
            @*@Html.ActionLink("Details", "Details", new { id=item.Cate_Id }) |*@
            <button type="button" class="btn btn-warning text-white" data-toggle="modal" data-target="#exampleModalScrollable">@Html.ActionLink("Matricular", "Delete", new { id = item.Cate_Id }, htmlAttributes: new { @style = "color:#fff; " })</button>
        </td>

        <!-- Button trigger modal -->
  
        <!-- Modal -->
        <div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalScrollableTitle">Gestion Matricula</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                      




                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-warning">Finalizar Matricula</button>
                    </div>
                </div>
            </div>
        </div>

    </tr>
                }

            </table>
