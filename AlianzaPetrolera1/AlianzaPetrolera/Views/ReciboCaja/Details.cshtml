            <div class="col-sm-6 centrar-contenido" style="left:4%">
                <table class="tabla-detal-inscp">
                    <tr><th><b>@Html.DisplayNameFor(model => model.Reci_Mpago) </b></th><td>@Html.DisplayFor(model => model.Reci_Mpago) </td></tr>
                    <tr><th><b>Costo Matrícula </b></th><td width="50px">@Html.DisplayFor(model => model.Desc_Matri) </td></tr>
                    <tr><th><b>Costo Póliza  </b></th><td>@Html.DisplayFor(model => model.Desc_Poli)  </td></tr>
                    <tr><th><b>Costo Uniforme  </b></th><td>@Html.DisplayFor(model => model.Desc_Unif)  </td></tr>
