@using ReportViewerForMvc;
@{
    ViewBag.Title = "Generar Recibo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="fondo-tabla texto-contenido">
    <br />
    <div class="row">
        <div class="titulo-index col-sm-6 ">
            <h1 class="col-sm-6">Generar Recibo</h1>
        </div>
        <div class="col-sm-2" style="height:50px; left:18%">
            <a href="@Url.Action("Index","ReciboCaja")"><input type="button" class="btn btn-warning" value="Regresar" /></a>
        </div>
    </div>
    <hr />
    <div>
        <div class="row">
            <label class="text-danger">@ViewBag.TextError</label>
        </div>
        @if (ViewBag.ReportViewer != null)
        {
            <div class="row">
                <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12" style="overflow-x:scroll; height:80vh; left:18%">
                    @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { scrolling = "si", style = "width: 65%; height: 100%;" })
                </div>
            </div>
        }
    </div>
</body>
